#!/bin/bash

#$1 - название директории, в которой необходимо создать $4 однотипных файлов
#$2 - текстовая часть названия файла. К ней прибавляется индекс
#$3 - расширение файла
#$4 - количество файлов

set -Eeuo pipefail

if [ -d $1 ]
then
	cd  $1
else
	mkdir $1; cd $1;
fi
limit=$4
for ((a=1; a <=limit ; a++))
do
	touch "$2$a$3"
done
